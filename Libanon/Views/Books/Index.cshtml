@model IEnumerable<Libanon.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentISBN.ISBNCode)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentOwner.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>


    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Author)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ImageUrl)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CurrentISBN.ISBNCode)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CurrentOwner.Name)
    </td>
    <td>

        @if (item.State == BookState.BookShelf)
        {
            @Html.ActionLink("Edit", "Index", "OTP", new { id = item.BookId }, null) <a>|</a>
            @Html.ActionLink("Borrow", "RequireBorrow", new { id = item.BookId })
        }
        @if (item.State == BookState.Borrowed)
        {
            @Html.ActionLink("Return", "ReturnBook", new { id = item.BookId })

         }
    </td>
</tr>
}

</table>
